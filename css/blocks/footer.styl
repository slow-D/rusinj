.footer
	background-color #3b4255
	position relative
	width: 100%
	padding-top: 75px
	padding-bottom: 65px
	padding-right: 115px
	+below(xs)
		padding-top 25px
		padding-bottom 30px
		padding-right 15px
	+below(1281px)
		padding-right 50px
	&-wrap
		display flex
		align-items center
		justify-content space-between
		margin-bottom: 70px
		+below(xs)
			margin-bottom 30px
	&-nav
		display flex
		align-items center
		font-size: 16px
		font-weight 400
		+below(xs)
			display none
		+below(sm)
			display none
		&__item
			color #fff
			&:not(:last-of-type)
				margin-right: 50px
				+below(1281px)
					margin-right 30px
			&:first-of-type
				margin-right: 90px
				+below(1281px)
					margin-right 50px
		.icon
			height: 20px
			width: 20px
	&-col
		margin-left 95px
		+below(xs)
			margin-top 15px
			margin-left 0
		+below(1281px)
			margin-left 50px
	&-contact
		display flex
		align-items flex-start
		+below(xs)
			flex-direction column
		&__item
			color #fff
			display flex
			align-items center
			font-size: 16px
			font-weight 400
			&_s
				margin-left: 35px
				color #fff
				font-size: 12px
			.icon
				height: 20px
				width: 20px
				margin-right: 15px
	&-text
		font-size: 12px
		font-weight 400
		display flex
		align-items flex-start
		justify-content space-between
		+below(xs)
			flex-direction column
		p
			color #fff
			margin 0
			+below(xs)
				margin-bottom 20px
		a
			color #fff
			font-size: 14px
			text-transform uppercase
	& a
		transition color .15s cubic
		&:hover
			color $baseRedColor

.btn-up
	border 1px solid $baseRedColor
	cursor pointer
	position absolute
	background-color $baseRedColor
	color #fff
	height: 70px
	width: 70px
	top -70px
	right: 0
	display flex
	align-items center
	justify-content center
	padding 20px
	transition .15s cubic
	+below(xs)
		height 30px
		width 30px
		top 20px
		right 20px
		padding 7px
	&:hover
		background-color #fff
		color $baseRedColor
	.icon
		height: 100%
		width: 100%